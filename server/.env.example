# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/smart-restaurant
# Or run MongoDB with Docker and use:
# MONGODB_URI=mongodb://root:password@localhost:27017/smart-restaurant?authSource=admin
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smart-restaurant

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=30d

# Email Configuration
# Option 1: SendGrid (Recommended for Production - Free 100 emails/day)
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your-sendgrid-api-key

# Option 2: Gmail (For Development)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-specific-password

# Option 3: Custom SMTP
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password

# From Address (used by all providers)
EMAIL_FROM=noreply@smartrestaurant.com
EMAIL_FROM_NAME=Smart Restaurant

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Stripe Payment (Test Mode)
# Get your test keys from: https://dashboard.stripe.com/test/apikeys
# Test mode keys start with: sk_test_ and pk_test_
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
# Webhook secret from: https://dashboard.stripe.com/test/webhooks
# Create webhook endpoint: http://your-domain/api/payments/webhook
# Listen to events: payment_intent.succeeded, payment_intent.payment_failed, payment_intent.canceled
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# QR Code Configuration
QR_CODE_BASE_URL=http://localhost:5173/table
QR_CODE_SECRET=your-qr-signing-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
